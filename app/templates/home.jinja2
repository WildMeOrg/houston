{% extends "layout.jinja2" %}

{% block title %}Home{% endblock %}

{% block head %}
  {{ super() }}
{% endblock %}

{% block style %}
  {{ super() }}
{% endblock %}

{% block content %}

  <div class="container">
    <div class="row">
      <div class="col-1 col-sm-1 col-md-1 col-lg-3 col-xl-4"></div>

      <div class="col-10 col-sm-10 col-md-10 col-lg-6 col-xl-4">
        <img class="mx-auto d-block" alt="Wild Me Houston" src="{{ url_for('backend.static', filename='images/icon.png', version=cachebuster) }}" style="width: 30%; margin-bottom: 25px; margin-top: 41px;">

        {% if current_user.is_authenticated %}
          {% include "home.logout.jinja2" %}
        {% else %}
          {% include "home.login.jinja2" %}
        {% endif %}
      </div>

      <div class="col-1 col-sm-1 col-md-1 col-lg-3 col-xl-4"></div>
    </div>
  </div>

  <div class="fixed-bottom">
    <div class="row">

      <div class="col-0 col-sm-0 col-md-0 col-lg-6 col-xl-4"></div>

      <div class="col-6 col-sm-6 col-md-6 col-lg-3 col-xl-4">
        <nav class="nav nav-pills flex-column flex-sm-row" style="margin: 10px;">
          <a class="flex-sm-fill text-sm-center nav-link active" target="_blank" href="https://github.com/WildMeOrg/houston/commit/{{ commit_houston }}">Houston Version {{ version_houston }}</a>
        </nav>
      </div>
    </div>
  </div>

{% endblock %}

{% block foot %}
  {{ super() }}
{% endblock %}

{% block script %}
  {{ super() }}
{% endblock %}
