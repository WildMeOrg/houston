<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html lang="en">
  <head>
    {% block head %}
    <title>Houston - {% block title %}{% endblock %}</title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ google_analytics_tag }}"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', '{{ google_analytics_tag }}');
    </script>

    <!-- generics -->
    <link rel="icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-32.png', version=cachebuster) }}" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-57.png', version=cachebuster) }}" sizes="57x57">
    <link rel="icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-76.png', version=cachebuster) }}" sizes="76x76">
    <link rel="icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-96.png', version=cachebuster) }}" sizes="96x96">
    <link rel="icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-128.png', version=cachebuster) }}" sizes="128x128">
    <link rel="icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-192.png', version=cachebuster) }}" sizes="192x192">
    <link rel="icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-228.png', version=cachebuster) }}" sizes="228x228">

    <!-- Android -->
    <link rel="shortcut icon" type="image/png" sizes="196x196" href="{{ url_for('backend.static', filename='favicon/favicon-196.png', version=cachebuster) }}">

    <!-- iOS -->
    <link rel="apple-touch-icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-120.png', version=cachebuster) }}" sizes="120x120">
    <link rel="apple-touch-icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-152.png', version=cachebuster) }}" sizes="152x152">
    <link rel="apple-touch-icon" type="image/png" href="{{ url_for('backend.static', filename='favicon/favicon-180.png', version=cachebuster) }}" sizes="180x180">

    <!-- Windows 8 IE 10-->
    <meta name="msapplication-TileColor" content="#FFFFFF">
    <meta name="msapplication-TileImage" content="{{ url_for('backend.static', filename='favicon/favicon-144.png', version=cachebuster) }}">

    <!-- Windows 8.1 + IE11 and above -->
    <meta name="msapplication-config" content="{{ url_for('backend.static', filename='favicon/browserconfig.xml', version=cachebuster) }}">
    {% endblock %}

    {% block style %}{% endblock %}

    <!-- CSS Styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <link rel="stylesheet" href="{{ url_for('backend.static', filename='css/style.css', version=cachebuster) }}">
  </head>
  
  <body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="{{ url_for('frontend.home') }}">
        Frontend
      </a>
      <a class="navbar-brand" href="{{ url_for('backend.home') }}">
        Houston
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/api/v1/">API</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>


    </div>

    <div id="content">
      {% block content %}{% endblock %}

      <div class="container" style="min-height:100% width:50%">
      {% with messages = get_flashed_messages() %}
      {% if messages %}
          {% for message in messages %}
          <div class="alert alert-warning alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
              {{message}}
          </div>
          {% endfor %}
      {% endif %}
      {% endwith %}
      
      {% block body %}
      {% endblock %}

    </div>

    <div class="clearfix"></div>

    <div id="footer">
      {% block footer %}{% endblock %}
    </div>
 
  </body>

  {% block foot %}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

  {% endblock %}

  {% block script %}{% endblock %}
</html>